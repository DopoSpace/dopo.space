# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dopo_space?schema=public"

# Application
NODE_ENV="development"
APP_URL="http://localhost:5173"
JWT_SECRET="your-secret-key-here-change-in-production"

# Domain Configuration (for subdomain separation)
# Development: use lvh.me (resolves to 127.0.0.1, no /etc/hosts needed)
# Production: use your actual domain (e.g., dopo.space)
MAIN_DOMAIN="lvh.me:5173"
ADMIN_SUBDOMAIN="admin"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # sandbox or live
PAYPAL_WEBHOOK_ID="your-paypal-webhook-id"

# Mailchimp
MAILCHIMP_API_KEY="your-mailchimp-api-key"
MAILCHIMP_SERVER_PREFIX="us1" # e.g., us1, us2, etc.
MAILCHIMP_AUDIENCE_ID="your-audience-id"

# Email (Resend - https://resend.com)
RESEND_API_KEY="re_xxxxxxxxxx"
EMAIL_FROM="Dopo Space <noreply@dopo.space>"

# Google Analytics 4
PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
